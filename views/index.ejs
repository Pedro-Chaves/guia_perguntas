<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <a href="/question/create" class="btn btn-primary">Perguntar</a>
        <hr>
        <% questions.forEach(question => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h4><%= question.title %></h4>
                </div>
                <div class="card-footer">
                    <a href="/question/<%= question.id %>"><button class="btn btn-primary">Responder</button></a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include('partials/footer.ejs') %>